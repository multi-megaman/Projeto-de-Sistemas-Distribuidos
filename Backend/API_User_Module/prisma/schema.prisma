generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String
  password String
  links Link[]
}

model Link {
  id        Int     @id @default(autoincrement())
  url       String
  userId    Int  
  user      User    @relation(fields: [userId], references: [id])
}

